{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "types": ["node", "jest"]
  },

  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}